<h1 class="text-center">Add a review for <%= @restaurant.name %></h1>

<hr>

<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
      <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :content %>
        <%= f.input :rating %>
        <%= f.submit "Add a review", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>
